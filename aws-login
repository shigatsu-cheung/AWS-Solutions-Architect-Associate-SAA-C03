#Check aws login
aws sts get-caller-identity

#Configure aws
aws configure

#Autoprompt
export AWS_CLI_AUTO_PROMPT="on-partial"

# installing powershell on ubuntu
#https://learn.microsoft.com/en-us/powershell/scripting/install/install-ubuntu?view=powershell-7.5

sudo apt-get update
sudo apt-get install -y wget apt-transport-https software-properties-common
source /etc/os-release
wget -q https://packages.microsoft.com/config/ubuntu/$VERSION_ID/packages-microsoft-prod.deb
sudo dpkg -i packages-microsoft-prod.deb
rm packages-microsoft-prod.deb
sudo apt-get update
sudo apt-get install -y powershell
pwsh

#Installing aws on linux maxos
#https://docs.aws.amazon.com/powershell/v5/userguide/install-aws.tools-on-linux-macos.html

#Guide for PowerShell AWS Tools
#https://docs.aws.amazon.com/powershell/v4/reference/


